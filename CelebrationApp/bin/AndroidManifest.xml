<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.celebrationapp"
    android:versionCode="1"
    android:versionName="1.0" >
    
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    

    <uses-sdk
        android:minSdkVersion="13"
        android:targetSdkVersion="17" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/stars_logo"
        android:label="Celebration Conference"
        android:theme="@style/CustomTheme" 
        >
        <activity
            android:name="com.example.celebrationapp.SplashScreen"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Black.NoTitleBar" >
              <intent-filter>
                <action android:name="android.intent.action.MAIN" />
 
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.celebrationapp.MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
 		</intent-filter>
        </activity>
        <activity 
            android:name="com.example.celebrationapp.ConnectionDetector"
            android:screenOrientation="portrait">
        </activity>
        <activity 
            android:name="com.example.celebrationapp.Schedule"
            android:screenOrientation="portrait">
        </activity>
         <activity 
            android:name="com.example.celebrationapp.EventProfile"
            android:screenOrientation="portrait">
        </activity>
        <activity 
            android:name="com.example.celebrationapp.TabbedSchedule"
            android:screenOrientation="portrait">
        </activity>
        <activity 
            android:name="com.example.celebrationapp.WebViewActivity"
            android:screenOrientation="portrait">
        </activity>
        <activity 
            android:name="com.example.celebrationapp.ViewMap"
            android:screenOrientation="portrait">
        </activity>
    </application>

</manifest>
