<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.celebrationapp"
    android:versionCode="1"
    android:versionName="1.0" >
    
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="17" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.celebrationapp.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity 
            android:name="com.example.celebrationapp.ConnectionDetector">
        </activity>
        <activity 
            android:name="com.example.celebrationapp.Schedule">
        </activity>
         <activity 
            android:name="com.example.celebrationapp.EventProfile">
        </activity>
        <activity 
            android:name="com.example.celebrationapp.Days">
        </activity>
        <activity 
            android:name="com.example.celebrationapp.TabbedSchedule">
        </activity>
        <activity 
            android:name="com.example.celebrationapp.TabbedPersonal">
        </activity>
        <activity 
            android:name="com.example.celebrationapp.TabbedSingle">
        </activity>
        <activity 
            android:name="com.example.celebrationapp.WebViewActivity">
        </activity>
    </application>

</manifest>
